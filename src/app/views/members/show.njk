{% extends 'layout.njk' %}

{% block content %}
  <div class="create-form">

    <section class="avatar" style="background: url('{{member.avatar_url}}') no-repeat center center / cover"></section>
    <section class="details">
    
    <div class="item">
      <div>Nome</div>
      <div>
        {{member.name}}
      </div>
    </div>

    <div class="item">
      <div>Altura</div>
      <div>
        {{member.height}}
      </div>
    </div>

    <div class="item">
      <div>Peso</div>
      <div>
        {{member.weight}}
      </div>
    </div>

    <div class="item">
      <div>Sexo</div>
      <div>
        {{ "Masculino" if member.gender == "M" else "Feminino" }}
      </div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>
        {{ member.birth }}
      </div>
    </div>

    <div class="item">
      <div>Services</div>
      <div>
        {% for service in member.services %}
        <span>{{ service }}</span>
        {% endfor %}
      </div>
    </div>

  
    <a href="/members/{{member.id}}/edit"> Editar </a>

  </div>
  
{% endblock %}