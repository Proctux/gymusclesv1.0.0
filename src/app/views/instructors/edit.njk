{% extends 'layout.njk' %}

{% block head %}

  <title>
    Gymuscles | Instrutores
  </title>

{% endblock %}

{% block content %}
  <div class="create-form">

    <section class="avatar" style="background: url('{{instructor.avatar_url}}') no-repeat center center / cover"></section>
    <section class="details">

      <form action="/instructors?_method=PUT" method="POST">
        <h3>Detalhes do Instrutor</h3>

        {% include 'instructors/fields.njk' %}

        <button type="submit" class="button">
          Salvar
        </button>
        <input type="hidden" name="id" value={{instructor.id}}>
      </form>

      <form id="form-delete" method="POST" action="/instructors?_method=DELETE">
        <input type="hidden" name="id" value="{{instructor.id}}">
        <button type="submit">Deletar</button>
      </form>

    </section>

  </div>
{% endblock %}