{% extends 'layout.njk' %}

{% block content %}
<div class="card">
  <table width="100%">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Sexo</th>
        <th>Áreas</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
    {% for instructor in instructors %}
      <tr>
        
        <td>
          <span style="background-image: url('{{instructor.avatar_url}}')"></span>
        {{instructor.name}}
        </td>
        <td>{{"Masculino" if instructor.gender == "M" else "Feminino"}}</td>
        <td>{{instructor.services}}</td>
        <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
        
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}